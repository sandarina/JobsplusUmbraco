@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{ var home = CurrentPage.Site();}
@{ var newsList = home.Children("dtNewsList").Where("Visible"); }
@if (newsList.Any())
{
    <br />
    <div class="col-md-12">
        @{ var newsAll = newsList.First().Children.Where("Visible"); }
        <div class="row">
            @foreach (var news in newsAll.OrderBy("createDate descending"))
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="@news.GetCropUrl("nThumbnail", "thumbnail")" alt="@news.Name" />
                        <div class="caption">
                            <h3>@news.Name</h3>
                            <p>@news.nDescription</p>
                            <p><a href="@news.Url" class="btn btn-default violet" role="button">Přečíst článek</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
