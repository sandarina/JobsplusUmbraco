@*inherits Umbraco.Web.Mvc.UmbracoTemplatePage*@
@using JobsplusUmbraco.Models
@inherits Umbraco.Web.Mvc.UmbracoViewPage<AdvertisementList>
@{
    Layout = "tBase.cshtml";
}

<div id="aBody">
	<div id="tBody">
        <div class="col-md-6"></div>
		<div class="col-md-6">
			<div class="container">
				<div class="row">
					<span class="tBody_hlText">Práce pro všechny</span>
					<br/>	
					<span class="tBody_vText">Práce na plný úvazek, stáže, brigády, ztp</span>
				</div>
                
                @using (Html.BeginForm("tHome", "Home"))
                {
                    <fieldset>
                        <div class="row txtWorkingField">
                            @*Html.TextBox("workingField", Model.workingField ?? "Obor nebo pozice?")*@
                            @Html.DropDownListFor(model => model.region, Model.slRegions)
                        </div>
                        <div class="row txtRegion">
                            @*Html.TextBox("region", Model.region ?? "Kde?")*@
                            @Html.DropDownListFor(model => model.workingField, Model.slWorkingFields)
                        </div>
                        <div class="row btnRedirect">
                            <div class="col-md-6 sIsZTP left">
                                <span><span id="schbIsZTP" class="chbIsZTP">@Html.CheckBoxFor(model => model.IsZTP)</span><span class="lblIsZTP white fs12 uppercase">ZTP</span></span>
                            </div>
                            <div class="col-md-6 btnFind">
                                <span><input type="submit" value="Hledat  >" /></span>
                            </div>
                        </div>
                    </fieldset>
                }
			</div>
		</div>
	</div>
	<div id="cBody">
		<div class="cBody_tabs">
			<div class="container">
				<div class="row">
					<div id="divTOPAdvertisementList" class="tab col-md-4">
						Top Inzerce @{ Html.RenderPartial("pvCountAllAdvertisement"); }
					</div>
					<div id="divTOPCompanyList" class="tab col-md-4">
						Top Firmy @{ Html.RenderPartial("pvCountAllCompany"); }
					</div>
					<div id="divNewsList" class="tab col-md-4">
						Aktuality
					</div>
				</div>
			</div>
		</div>
		<div class="cBody_content">
			<div class="container">
				<div class="row">
					<div id="TOPCompanyList">
						@{ Html.RenderPartial("pvTOPCompanyList"); }
					</div>		
					<div id="TOPAdvertisementList">
						@{ Html.RenderPartial("pvTOPAdvertisementList"); }
					</div>
					<div id="NewsList">
						@{ Html.RenderPartial("pvNewsList"); }
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="bBody">
		<div class="container">
			<div class="row">
				@{ Html.RenderPartial("pvFirstStepRegistration"); }
			</div>
		</div>
	</div>
</div>