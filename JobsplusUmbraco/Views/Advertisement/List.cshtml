@using JobsplusUmbraco.Models
@inherits Umbraco.Web.Mvc.UmbracoViewPage<AdvertisementList>

@{
    var success = TempData["AdvertisementSubmitIsSuccess"] != null;

}

@if (success)
{
    <div class="alert alert-success" role="alert">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> &nbsp;
                Inzerát byl uložen!
            </div>
            <div class="col-md-6 col-sm-6 text-right"><a href="@Url.Action("CloseSuccessMessage", new { url = Request.RawUrl })">Zavřít</a></div>
        </div>
    </div>
 }

<div><a href="vlozit-inzerat/">Vložit inzerát</a></div>
<div>
@using (Html.BeginForm("List", "Advertisement"))
{
    <div class="col-md-12 advertisementList">
        @if (Model.lAdvertisements.Count() > 0)
        {
            foreach (var advertisement in Model.lAdvertisements)
            {
                <div class='row advertisementItem @(advertisement.TOP ? "top" : "")'>
                    <div class="col-md-12">
                        <div class="row advertisementBody">
                            <div class="@(!string.IsNullOrEmpty(advertisement.CompanyLogo) ? "col-md-8" : "col-md-10") col-sm-8 advertisementName">
                                <div class="row">
                                    @advertisement.Company
                                </div>
                                <div class="row">
                                    <h4>
                                        @if (advertisement.TOP)
                                        {
                                            <span class="topSign">TOP</span>
                                        }
                                        <a href="@advertisement.Url"><b>@advertisement.Name</b></a>
                                    </h4>
                                </div>
                                <div class="row advertisementPlace">
                                    <span>@advertisement.City, </span><span>@advertisement.Region.Name</span>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(advertisement.CompanyLogo))
                            {
                                <div class="col-md-2 col-sm-4 advertisementCompany" style="height: 90px">
                                    <div style="margin: 0 auto">
                                        <a href="@advertisement.CompanyUrl" class="obr center" style="line-height: 90px; height: 90px">
                                            <span><img src="@advertisement.CompanyLogo" alt="@advertisement.Company" style="max-height: 90px" /></span>
                                        </a>
                                    </div>
                                </div>
                            }
                            <div class="col-md-2 text-right">
                                <div class="row">
                                    <a href="@advertisement.Url" class="btn btn-default violet">Detail</a>
                                </div>
                            </div>
                        </div>
                        <div class="row advertisementBottom">
                            <div class="col-md-4 col-sm-6"><span>Vzdělání</span> @advertisement.RequiredEducation.Name</div>
                            <div class="col-md-6 col-sm-6"><span>Typ</span> @advertisement.TypeOfWork.Name</div>
                            <div class="col-md-2"><span>ZTP</span> @(advertisement.ZTP ? "ANO" : "NE") </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="noAdvertisements">firma nemá zadané žádné inzeráty</div>
        }
    </div>
}
</div>


